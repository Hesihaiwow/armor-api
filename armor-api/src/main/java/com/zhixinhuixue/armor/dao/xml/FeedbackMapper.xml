        <![CDATA[ AND  f.create_time >= #{beginTime,jdbcType=TIMESTAMP}]]>
      </if>
      <if test="endTime != null">
        <![CDATA[ AND  f.create_time <= #{endTime,jdbcType=TIMESTAMP}]]>
      </if>
      <if test="user != null">
        and f.create_by = #{user}
      </if>
      <if test="chargeMan != null">
        and u.id = #{chargeMan}
      </if>
    </where>
    GROUP BY f.id
    ORDER BY f.feedback_time DESC
  </select>

  <!--获取我开发的需求-->
  <select id="selectDemandJoinedList" resultMap="demandJoinedMap">
