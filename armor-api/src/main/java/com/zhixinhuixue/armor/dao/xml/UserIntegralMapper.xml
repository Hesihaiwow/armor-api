<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhixinhuixue.armor.dao.IZSYUserIntegralMapper">
  <resultMap id="BaseResultMap" type="com.zhixinhuixue.armor.model.pojo.UserIntegral">
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="task_id" jdbcType="BIGINT" property="taskId" />
    <result column="user_id" jdbcType="BIGINT" property="userId" />
    <result column="integral" jdbcType="INTEGER" property="integral" />
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
  </resultMap>

  <resultMap id="BaseMap" type="com.zhixinhuixue.armor.model.bo.UserIntegralNameBO" extends="BaseResultMap">
      <id column="id" jdbcType="BIGINT" property="id" />
      <result column="name" jdbcType="VARCHAR" property="name" />
  </resultMap>
  <sql id="Base_Column_List">
    id, task_id, user_id, integral, create_time
  </sql>
  <!--查询查询积分列表 通过时间倒序排列-->
  <select id="findIntegral"  resultMap="BaseMap">
    SELECT i.*,u.name
    FROM user_integral i,user u
    <where>
      i.create_time &gt; #{startTime,jdbcType=TIMESTAMP}
      <if test="endTime!=null">
        AND i.create_time &gt; #{startTime,jdbcType=TIMESTAMP}
      </if>
        AND i.user_id = u.id
    </where>
      ORDER BY create_time DESC
  </select>

  <insert id="insert" parameterType="com.zhixinhuixue.armor.model.pojo.UserIntegral">
    insert into user_integral (id, task_id, user_id,
    integral, create_time)
    values (#{id,jdbcType=BIGINT}, #{taskId,jdbcType=BIGINT}, #{userId,jdbcType=BIGINT},
    #{integral,jdbcType=INTEGER}, #{createTime,jdbcType=TIMESTAMP})
  </insert>

</mapper>